{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/apps/*": ["apps/*"],
      "@/libs/*": ["libs/*"],
      "@/shared/*": ["shared/*"],
    }
  }
}
